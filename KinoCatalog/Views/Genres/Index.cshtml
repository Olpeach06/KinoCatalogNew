@model IEnumerable<KinoCatalog.Models.Genre>

@{
    ViewData["Title"] = "Index";
}

<head>
    <style>
        /* Стиль для заголовков */
        h1 {
            color: BurlyWood;
        }

        /* Класс для элементов таблицы */
        th,
        td.burlywood-text {
            color: BurlyWood;
        }
    </style>
</head>

<body>
    <h1>Жанр</h1>

    <p>
        <a asp-action="Create">Создать новый</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="burlywood-text">
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.GenreID">Редактировать</a> |
                        <a asp-action="Details" asp-route-id="@item.GenreID">Детали</a> |
                        <a asp-action="Delete" asp-route-id="@item.GenreID">Удалить</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>